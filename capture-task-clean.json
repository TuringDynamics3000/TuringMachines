{
    "family":  "turing-capture",
    "executionRoleArn": "arn:aws:iam::961971040149:role/ecsTaskExecutionRole",
"taskRoleArn":      "arn:aws:iam::961971040149:role/ecsTaskExecutionRole",

    "networkMode":  "awsvpc",
    "containerDefinitions":  [
                                 {
                                     "name":  "turing-capture",
                                     "image":  "961971040149.dkr.ecr.ap-southeast-2.amazonaws.com/turing-capture:latest",
                                     "essential":  true,
                                     "portMappings":  [
                                                          {
                                                              "containerPort":  8000,
                                                              "protocol":  "tcp"
                                                          }
                                                      ],
                                     "logConfiguration":  {
                                                              "logDriver":  "awslogs",
                                                              "options":  {
                                                                              "awslogs-group":  "/ecs/turing-capture",
                                                                              "awslogs-region":  "ap-southeast-2",
                                                                              "awslogs-stream-prefix":  "ecs"
                                                                          }
                                                          },
                                     "environment":  [
                                                         {
                                                             "name":  "S3_BUCKET",
                                                             "value":  "turingmachines-dev-artifacts-490189534"
                                                         },
                                                         {
                                                             "name":  "DB_HOST",
                                                             "value":  "turingmachines-dev-postgres.cvyyew6ce7us.ap-southeast-2.rds.amazonaws.com"
                                                         },
                                                         {
                                                             "name":  "DB_NAME",
                                                             "value":  "turingdb"
                                                         },
                                                         {
                                                             "name":  "SECRET_NAME",
                                                             "value":  "turingmachines-dev/postgres"
                                                         }
                                                     ]
                                 }
                             ],
    "requiresCompatibilities":  [
                                    "FARGATE"
                                ],
    "cpu": "256",
    "memory": "512",
    "runtimePlatform":  {
                            "operatingSystemFamily":  "LINUX",
                            "cpuArchitecture":  "X86_64"
                        }
}
